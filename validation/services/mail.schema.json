{
	"$schema": "http://json-schema.org/draft-07/schema#",
	"$id": "https://github.com/fabiocaruso/NotificationServer/raw/master/validation/services/mail.schema.json",
	"title": "Mail",
	"description": "Mail service for NotificationServer.",
	"required": ["smtp", "from", "to"],
	"type": "object",
	"properties": {
		"smtp": {
			"type": "string",
			"format": "hostname"
		},
		"from": {
			"type": "string",
			"format": "email"
		},
		"to": {
			"type": "string",
			"format": "email"
		}

	}
}
